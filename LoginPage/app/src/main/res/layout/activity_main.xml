<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Login"
        android:textColor="@color/word1"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:layout_marginTop="129sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginHorizontal="31sp"
        android:paddingVertical="12sp"
        android:paddingStart="32sp"
        android:layout_marginTop="42sp"
        android:fontFamily="@font/poppins_regular"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginHorizontal="31sp"
        android:paddingVertical="12sp"
        android:paddingStart="32sp"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/poppins_regular"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:text="Login"
        android:textSize="20sp"
        android:layout_marginHorizontal="31sp"
        android:layout_marginTop="108sp"
        android:fontFamily="@font/poppins_bold"
        ></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop="14sp">
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.799"
            android:text="New Member? "
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="textEnd"
            android:textColor="@color/word1"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Register"
            android:textSize="15sp"
            android:textColor="@color/button"/>
    </LinearLayout>


</LinearLayout>